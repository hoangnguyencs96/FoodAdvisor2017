@model IEnumerable<Model.EF.Girlfriend>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Employees's girlfriends
        <button href="#" class="btn btn-primary" style="float:right;">Thêm mới</button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Họ và tên</th>
                        <th>Tuổi</th>
                        <th>Avatar</th>
                        <th>Quê quán</th>
                        <th>Trạng thái</th>
                        <th>Chỉnh sửa</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Họ và tên</th>
                        <th>Tuổi</th>
                        <th>Avatar</th>
                        <th>Quê quán</th>
                        <th>Trạng thái</th>
                        <th>Chỉnh sửa</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var a in Model)
                    {
                        <tr>
                            <td>@a.ID</td>
                            <td>@a.Name</td>
                            <td>21</td>
                            <td style="padding:5px;"><img src="@Url.Content(a.Image)" width="100px" height="110px" /></td>
                            <td>Hải Phòng</td>
                            <td><b style="color:lawngreen;">Kích hoạt</b></td>
                            <td>
                                <div>
                                    <button href="#" class="btn btn-primary">Sửa</button>
                                    <button href="#" class="btn btn-danger">Xóa</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>